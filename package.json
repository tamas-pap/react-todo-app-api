  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "debug": "^4.0.1",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "express-validator": "^5.3.0",
    "handlebars": "^4.3.0",
    "html-to-text": "^4.0.0",
    "lodash": "^4.17.21",
    "mongoose": "^5.7.5",
    "ms": "^2.1.1",
    "nodemailer": "^4.6.8",
    "passport": "^0.4.0",
    "passport-http-bearer": "^1.0.1",
    "uniq-string": "^1.0.0",
    "validator": "^10.7.1"
  },
  "devDependencies": {
    "eslint": "^5.6.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^22.1.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "jest": "^24.8.0",
    "nodemon": "^1.18.7"
  },
  "eslintConfig": {
    "extends": "airbnb",
    "rules": {
      "indent": "off",
      "max-len": "off",
      "no-shadow": "off",
      "comma-style": "off",
      "no-plusplus": "off",
      "arrow-parens": "off",
      "no-await-in-loop": "off",
      "consistent-return": "off",
      "operator-linebreak": "off",
      "no-confusing-arrow": "off",
      "object-curly-newline": "off",
      "function-paren-newline": "off",
      "implicit-arrow-linebreak": "off"
    }
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "arrowParens": "avoid",
    "requirePragma": false,
    "proseWrap": "preserve"
  }
}
